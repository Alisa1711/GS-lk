include data/data
include data/documents
include data/payments
include utils/mixins
doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(
      name="viewport"
      content="width=device-width, initial-scale=1.0"
      )
    meta(
      http-equiv="X-UA-Compatible"
      content="ie=edge"
      )
    block style
      link(
        rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Roboto:400,500&amp;subset=cyrillic"
        )
      link(rel="stylesheet" href="css/main.css")
    block title
      title= title
  body.page
    block header
      header.page-header
        .header
          include header
        include toolbar
    .wrapper
      main
        block content
      block footer
        include footer
    block modals
      include modals
      .message Пароль успешно изменен.
    block scripts
      script(src="js/jquery-3.3.1.min.js")
      script(src="js/main.js")
      script(src="js/svg4everybody.js")
      script(src="js/jquery.nice-select.min.js")
